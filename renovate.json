{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "automerge": true,
      "ignoreTests": true
    },
    {
      "matchPackageNames": ["npm"],
      "automerge": true,
      "ignoreTests": true,
      "groupName": "npm dependencies"
    }

  ]
}